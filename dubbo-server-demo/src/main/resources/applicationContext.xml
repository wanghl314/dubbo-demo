<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:dubbo.properties</value>
			</list>
		</property>
	</bean>

	<dubbo:application name="${dubbo.application.name}" />
	<!--
	<dubbo:registry address="multicast://224.5.6.7:1234" />
	<dubbo:registry address="zookeeper://127.0.0.1:2181?client=zkclient" />
	<dubbo:registry address="zookeeper://127.0.0.1:2181?client=curator" />
	-->
	<dubbo:registry protocol="${dubbo.registry.protocol}"
		address="${dubbo.registry.address}" client="${dubbo.registry.client}" />
	<dubbo:protocol name="${dubbo.protocol.name}" host="${dubbo.protocol.host}"
		port="${dubbo.protocol.port}" />
	<dubbo:service interface="com.whl.dubbo.DemoService" ref="demoService" />
	<bean id="demoService" class="com.whl.dubbo.DemoServiceImpl" />

</beans>